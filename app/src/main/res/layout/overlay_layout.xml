<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#AA000000"
    android:padding="10dp">

    <Button
        android:id="@+id/start_analysis_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_analysis"
        android:textStyle="bold"
        android:backgroundTint="#92C5EF" />

    <Button
        android:id="@+id/minimize_results_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minimize_results"
        android:textStyle="bold"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scroll_view_analysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/analysis_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:paddingTop="10dp"/>
    </ScrollView>
</LinearLayout>
